# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_optional

# Spotify API Credentials
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Genius API Token
# Get from: https://genius.com/api-clients
GENIUS_API_TOKEN=your_genius_api_token

# YouTube Music Cookies (optional - for authenticated access)
# Export from browser using "Get cookies.txt" extension
YOUTUBE_COOKIES_PATH=/path/to/cookies.txt

# Optional: Musixmatch API (if you want to use it)
# MUSIXMATCH_API_TOKEN=your_musixmatch_token

# Web Dashboard Settings (optional)
ENABLE_WEB_DASHBOARD=true
WEB_DASHBOARD_HOST=0.0.0.0
WEB_DASHBOARD_PORT=5000

# Authentication (Web Dashboard)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
PUBLIC_VIEW_ENABLED=true

# FTP Audio Cache (optional - for persistent audio caching)
FTP_HOST=your_ftp_host
FTP_USER=your_ftp_username
FTP_PASSWORD=your_ftp_password
FTP_DIRECTORY=/audio-cache

# Server Mode - Disable streaming (for servers where YouTube blocks IP)
# Set to "true" if you get 403 Forbidden errors when streaming
DISABLE_STREAMING=false

# One Track One Process Mode - Sequential playlist processing
# When enabled, prepares only 1 track at a time (instead of 3)
# Useful for limited resources or slow connections
ONE_TRACK_ONE_PROCESS=false

# YouTube Proxy - Fallback when YouTube blocks server IP (403 Forbidden)
# Supports HTTP proxy (http://host:port) or SOCKS5 (socks5://host:port)
# Use bore.pub tunnel: bore local 8888 --to bore.pub (on your local machine)
# Then set: YOUTUBE_PROXY=http://bore.pub:PORT
YOUTUBE_PROXY=

# Rclone Audio Cache (Windows RDP - replaces FTP)
# Mount Google Drive: rclone mount gdrive:SONORA-Cache G: --vfs-cache-mode full
# Then set the path below
RCLONE_CACHE_ENABLED=false
RCLONE_CACHE_PATH=G:/audio
