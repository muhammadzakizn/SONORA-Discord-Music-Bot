# SONORA Bot - ALPHA Environment Configuration
# ⚠️ FOR TESTING ONLY - DO NOT USE IN PRODUCTION

# Bot Version
BOT_VERSION=3.3.0-alpha
BOT_ENVIRONMENT=alpha

# Discord Bot Configuration (ALPHA)
DISCORD_TOKEN=your_alpha_bot_token_here
DISCORD_GUILD_ID=your_test_guild_id_optional

# Spotify API Credentials (ALPHA)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Genius API Token (ALPHA)
GENIUS_API_TOKEN=your_genius_api_token

# Web Dashboard Settings (ALPHA)
ENABLE_WEB_DASHBOARD=true
WEB_DASHBOARD_HOST=127.0.0.1
WEB_DASHBOARD_PORT=5001  # Different port from stable

# Authentication (ALPHA)
ADMIN_USERNAME=alpha_admin
ADMIN_PASSWORD=alpha_test_password_change_this
PUBLIC_VIEW_ENABLED=true

# Alpha-specific settings
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_EXPERIMENTAL_FEATURES=true

# Database (separate from production)
DATABASE_PATH=bot_alpha.db
