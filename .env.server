# SONORA Bot - Full Server Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DISCORD BOT CONFIGURATION (REQUIRED)
# ===========================================
DISCORD_TOKEN=your_discord_bot_token_here

# ===========================================
# DISCORD OAUTH (for Web Dashboard Login)
# ===========================================
NEXT_PUBLIC_DISCORD_CLIENT_ID=1443855259536461928
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# ===========================================
# MUSIC SOURCES (REQUIRED for music playback)
# ===========================================
# Spotify - Get from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Genius Lyrics - Get from https://genius.com/api-clients
GENIUS_API_TOKEN=your_genius_api_token

# ===========================================
# WEB DASHBOARD SETTINGS
# ===========================================
# Public URL of your server (for OAuth redirect)
NEXT_PUBLIC_APP_URL=http://your-server-ip:3000

# Ports
WEB_DASHBOARD_PORT=5000
WEB_PORT=3000

# Enable web dashboard
ENABLE_WEB_DASHBOARD=true

# ===========================================
# DEVELOPER LOGIN (optional)
# ===========================================
NEXT_PUBLIC_DEV_USER=developer
NEXT_PUBLIC_DEV_PASS=your_secure_password_here

# ===========================================
# DATABASE & CACHE
# ===========================================
DATABASE_PATH=bot.db
CACHE_DIR=cache
DOWNLOADS_DIR=downloads
LOGS_DIR=logs
